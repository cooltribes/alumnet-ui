<div class="paddingxs">
	<div class="container-fluid margin_top_small">
		<div class="row">
			<div  class="col-md-8 col-md-offset-2">
				<%% if @userCanPost: %>
				<div class="row" >
					<div class="item col-md-12">
						<div class="groupCreatePostForm clearfix">
							<div class="col-xs-4 col-sm-2 col-md-2 col-lg-2">
								<!-- AVATAR -->
								<div class="groupCreatePostForm__avatar">
									<img src="<%%= @current_user_avatar %>" class="img-circle">
								</div>
								<!-- AVATAR OFF-->
							</div>
							<div class="col-xs-8 col-sm-10 col-md-10 col-lg-10">
								<!-- FORM ON -->
								<div class="groupCreatePostForm__form">
									<form class="form">
										<div class="form-group groupCreatePostForm__textarea ">
											<textarea class=" form-control" name="body" id="body" placeholder="Write a new post"></textarea>
										</div>

										<!-- TAGGING -->
										<div class="form-group tagging" style="display:none">
										  <input type="hidden" id="js-user-tags-list" name="user_tags_list" style="width:100%">
										</div>
										<!-- TAGGING OFF -->

										<!-- PREVIEW -->
										<div class="form-group preview" style="display:none">
										  <input type="hidden" id="url" name="url" style="width:100%">
										  <input type="hidden" id="url_title" name="url_title" style="width:100%">
										  <input type="hidden" id="url_description" name="url_description" style="width:100%">
										  <input type="hidden" id="url_image" name="url_image" style="width:100%">
										</div>
										<!-- PREVIEW OFF-->
										<!-- PICTURES -->
								
										<div class="row">
											<div id="js-filelist"></div>
											<div id="js-new-image" class="col-md-3" style="display: none;">
												<a href="javascript:;" id="js-add-picture-block">
													<div class="styleAddNewImage">
														<div><span class="glyphicon glyphicon-plus"></span></div>
													</div>
												</a>
											</div>
										</div>
										
										<!-- PICTURES OFF -->
										<div class="row">
											<div class="col-md-8 col-xs-8 col-sm-8 paddingLink text-left">
												<a id="js-add-picture" class="groupPost__btn--addPicture groupPost__btn--addPicture--paddingLink" href="javascript:;">
													<i class="icon-entypo-picture"></i> Add Picture
												</a>
												<a id="js-add-tags" class="groupPost__btn--addPicture groupPost__btn--addPicture--paddingLink" href="javascript:;">
													<i class="icon-entypo-tag"></i> Tag Friends
												</a>
											</div>
											<div class="col-md-4 col-xs-4 col-sm-4 text-right">
												<a href="#" class="btn btn-primary" id="js-post-submit"> POST</a>
											</div>
										</div>
										

									</form>

									

									<!-- VIDEO  -->
									<div id="video_container"></div>
									<!-- VIDEO OFF -->
								</div>
								<!-- FORM OFF -->
							</div>
						</div>
					</div>
				</div>
				<%% end %>

				<!-- THIS IS ONLY FOR GROUPS -->
				<%% if not @userCanPost && not @userHasMembership : %>
				<div class="row">
					<div id="js-join-div" class="col-md-6 col-md-offset-3 margin_top">
						<div class="panel panel-default text-center">
					  	<div class="panel-heading">Join this group to post and comment</div>
							<div class="panel-body">
								<button class="btn btn-lg btn-primary js-join">+ join group</button>
							</div>
						</div>
					</div>
				</div>
				<%% end %>
				<!-- THIS IS ONLY FOR GROUPS OFF-->

				<!-- POSTS CONTAINER -->
				<div id="timeline" class="row posts-container minHeight"></div>
				<div class="text-center">
					<span class="throbber-loader"><%= image_tag('vendors/select2-spinner.gif') %> Loading...</span>
				</div>
				<!-- POSTS CONTAINER OFF -->
			</div>
		</div>
	</div>
</div>