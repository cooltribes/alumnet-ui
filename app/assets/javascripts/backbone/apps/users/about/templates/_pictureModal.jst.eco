<div class="bbm-modal__topbar">  
  <h3 class="bbm-modal__title">Editing my avatar <a href="#" class="bbm-button pull-right" id="js-close-btn">close</a></h3>
</div>

<div class="bbm-modal__section">
  <form>    
    
    <% if @avatar.extralarge: %>
      <img src="<%= @avatar.extralarge %>" alt="upload avatar" id="preview-avatar" width="240px" height="240px" class="img-circle">
      <% else: %>
      <img src="assets/registration/uploadAvatar.png" alt="upload avatar" id="preview-avatar" width="240px" height="240px" class="img-circle">
    <% end %>
    
    <input type="file" id="profile-avatar" style="margin-top: 15px" name="avatar" accept="image/*">
    <span class="help-block"></span>

  </form>
</div>

<div class="bbm-modal__bottombar">  
  <a href="#" class="bbm-button" id="js-save">Save</a>
</div>