<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 chat__content--conversations" id="js-conversation">
	<div class="row">
		<div class="col-xs-4 col-sm-3 col-md-3 col-lg-3">
			<img src="" alt="" class="image img-circle">		
		</div>
		<div class="col-xs-8 col-sm-9 col-md-9 col-lg-9 overfloadText text-left name">
			<a href="#" class="title"></a><br>
			<% if @unreadCount > 0: %>
		    <span class="body"><b><%= @lastMessageBody %></b></span>
		    <span class="badge"><%= @unreadCount %></span>
		  <% else: %>
		    <span class="body"><%= @lastMessageBody %></span>
		  <% end %>
		</div>
	</div>
</div>
