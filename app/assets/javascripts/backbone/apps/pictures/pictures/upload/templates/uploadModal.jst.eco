<div class="bbm-modal__section">
  <form>    
    <div class="form-group">
      <label class="control-label" for="name">Title</label>
      <input type="text" value="<%= @title %>" class="form-control input-lg" name="name" placeholder="Enter name">
      <span class="help-block"></span>
    </div>  
    
    <% if @picture: %>
        <img src="<%= @picture %>" alt="upload avatar" id="preview-picture" width="240px" height="240px" class="img-circle">
      <% else: %>
        <img src="assets/registration/uploadAvatar.png" alt="upload avatar" id="preview-picture" width="240px" height="240px" class="img-circle">
    <% end %>

    <div class="form-group">
      <input type="file" id="picture-file" style="margin-top: 15px" name="avatar" accept="image/*">
      <span class="help-block"></span>    
    </div>  


