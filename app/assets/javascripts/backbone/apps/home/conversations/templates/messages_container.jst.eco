<form class="form">
  <% if @isConversation: %>
    <div class="form-group">
      <select multiple class="form-control" id="recipients" name="recipients">
        <option value="1">Friend 1</option>
        <option value="2">Friend 2</option>
        <option value="3">Friend 3</option>
      </select>
    </div>
  <% end %>
  <div class="form-group">
    <input type="text" name="subject" id="group-name" class="form-control">
  </div>
  <div class="form-group">
    <textarea name="body" id="body" class="form-control"></textarea>
  </div>
  <button class="btn btn-primary js-submit">SEND</button>
</form>