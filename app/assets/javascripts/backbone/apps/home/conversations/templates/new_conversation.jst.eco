<div class="messageForm">
  <form class="form">
    <div class="form-group">
      <input type="hidden" name="recipients" id="recipients" style="width: 100%">
    </div>
    <div class="form-group">
      <input type="text" name="subject" id="subject" class="form-control" placeholder="Subject">
    </div>
    <div class="form-group">
      <textarea name="body" id="body" class="form-control" placeholder="Write a message.."></textarea>
    </div>
   <div class="text-right"> 
    <button class="btn btn-primary js-submit">SEND</button>
  </div>
  </form>
</div>