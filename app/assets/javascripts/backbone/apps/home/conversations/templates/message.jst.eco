<div class="sender">
  <img src="<%= @sender.avatar %>" alt="<%= @sender.name %>">
  <%= @sender.name %>
</div>
<%= moment(@created_at).fromNow() %>

<% if @is_read: %>
  <a href="#" class="js-mark-as-unread">Mark as Unread</a>
<% else: %>
  <a href="#" class="js-mark-as-read">Mark as Read</a>
<% end %>
<h3><%= @body %></h3>