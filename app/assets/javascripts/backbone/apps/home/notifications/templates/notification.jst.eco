<div class="messageCard js-notification">
	<div class="messageCard__content">
		<h5 class="messageCard__title"> <%= @body %> </h5>
		<span class="messageCard__date">
			<%= moment(@created_at).fromNow() %>
		</span>
	</div>
  <%= @is_read %>
  <% if @is_read: %>
    <a href="#" id="js-mark-as-unread">Mark as Unread</a>
  <% else: %>
    <a href="#" id="js-mark-as-read">Mark as Read</a>
  <% end %>
  <a href="#" id="js-delete">Delete</a>
</div>