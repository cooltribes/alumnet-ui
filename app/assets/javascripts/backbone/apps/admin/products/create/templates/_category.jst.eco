<li class="list margin_bottom_small">
	<input type="checkbox" value="<%= @id %>">
	<span><%= @name %></span>
	<ul class="list">
		<% for subcategory in @children: %>
			<li>
				<input type="checkbox" value="<%= subcategory.id %>">
				<span><%= subcategory.name %></span>
			</li>
		<% end %>
	</ul>
</li>