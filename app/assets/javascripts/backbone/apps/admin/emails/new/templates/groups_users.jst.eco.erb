<div class="row emails">
	<div class="col-md-6  col-md-offset-3 col-xs-12 col-sm-8 col-sm-offset-2 no-padding">	
		<div class="row">
			<div class="col-md-2 col-xs-2 emails__number">1</div>
			<div class="col-md-10 col-xs-10">
				<h2>Choose group</h2>
			</div>
		</div>
		<div class="row">
			<div class="col-md-2 col-xs-2 emails__space"></div>
			<div class="col-md-10 col-xs-10">
				<select class="filter-comparator filters__input filters__input--sm form-control input-lg">
					<option>Group name</option>
				</select>
				<span class="ico-triangle-down filters__selectIcon filters__selectIcon--grey emails__select_icon" aria-hidden="true" ></span>
			</div>	
		</div>
		<div class="row">
			<div class="col-md-2 col-xs-2 emails__space"></div>
			<div class="col-md-10 col-xs-10">
				<div class="row">
					<div class="col-md-2 col-xs-2 emails__imageMailchimp">
						<%= image_tag('emails/mailchimp.png', width:"30px", height: "30px") %>
					</div>
					<div class="col-md-10 col-xs-10 no-padding" id="js-remove-associated">
						<p>Group associated mailchimp account<br><b>[accountname]</b><a href="#" id="js-remove-associated-span"><span class="glyphicon glyphicon-remove emails__iconDelete" ></span></a> </p>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-2 col-xs-2 emails__space"></div>
			<div class="col-md-10 col-xs-10">
				<a href="#" class="btn btn-primary btn-primary-noBackground emails__associateGroup emails__associateGroup--mailchimp">
					<span class="text-left"><%= image_tag('emails/mailchimp.png', width:"30px", height: "30px") %>
					</span>
					<span class="text-center">ASSOCIATE GROUP WITH MAILCHIMP</span></a>
			</div>
		</div>
	</div>
	 <div class="col-md-6 col-xs-12 col-md-offset-3 col-sm-8 col-sm-offset-2 no-padding">
		<div class="row">
				<div class="col-md-2 col-xs-2 emails__number">2</div>
				<div class="col-md-10 col-xs-10">
					<h2>Choose users</h2>
				</div>
		</div>
		<div class="row">
			<div class="col-md-2 emails__space"></div>
			<div class="col-md-10">		
				<select class="filter-comparator filters__input filters__input--sm form-control input-lg">
					<option>Select a segment</option>
				</select>
				<span class="ico-triangle-down filters__selectIcon filters__selectIcon--grey emails__select_icon" aria-hidden="true" ></span>
			</div>	
		</div>
		<div id="add-filter"></div>
		<div class="row">
			<div class="col-md-2 emails__space"></div>
			<div class="col-md-10">
			    <button class="btn btn-primary btn-primary-noBackground emails__associateGroup emails__associateGroup--buttons" id="js-add-filter">
			    	<i class="fa fa-plus emails__icon"></i>ADD FILTER
			    </button>
			</div>
		</div>
	 </div>
</div>
