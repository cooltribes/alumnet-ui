<div id="header-region"></div>

<div id="main-region" class="container">
    <p>Loading...</p>
</div>


<script type="text/template" id="static-template">
    <p>This is text that was rendered by our Marionette app.</p>
</script>


<script type="text/javascript">
    var Alumnet = new Marionette.Application();

    Alumnet.addRegions({
        mainRegion: "#main-region"
    });

    Alumnet.StaticView = Marionette.ItemView.extend({
        template: "#static-template"
    });

    Alumnet.on("start", function(){
        var staticView = new Alumnet.StaticView();
        Alumnet.mainRegion.show(staticView);

    });

    Alumnet.start();

